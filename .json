// Obtendo o JSON de músicas
$jsonData = '[
    {
        "title": "Snuff",
        "artist": "Corey Taylor",
        "src": "musicas/Corey Taylor - Snuff.mp3",
        "cover": "imagens/snuff.jpg"
    },
    {
        "title": "The Trooper",
        "artist": "Iron Maiden",
        "src": "musicas/Iron Maiden - The Trooper.mp3",
        "cover": "imagens/Trooper.jpg"
    },
    {
        "title": "Under The Graveyard",
        "artist": "Ozzy Osbourne",
        "src": "musicas/Ozzy Osbourne - Under The Graveyard.mp3",
        "cover": "imagens/OzzyUnderTheGraveyard.jpg"
    }
]';

// Decodificando o JSON em um array associativo
$songs = json_decode($jsonData, true);

// Iterando sobre cada música
foreach ($songs as $song) {
    // Construindo os URLs completos para as músicas e imagens
    $fullMusicPath = env('APP_URL') . '/' . $song['musicas/Corey Taylor - Snuff.mp3'];
    $fullImagePath = env('APP_URL') . '/' . $song['imagens/snuff.jpg'];

    // Imprimindo os detalhes da música
    echo "Title: {$song['title']}" . PHP_EOL;
    echo "Artist: {$song['artist']}" . PHP_EOL;
    echo "Music URL: $fullMusicPath" . PHP_EOL;
    echo "Cover URL: $fullImagePath" . PHP_EOL;
    echo PHP_EOL;
}
